{
  "name": "@cgk/shopify",
  "version": "0.0.0",
  "description": "Shopify Admin and Storefront API clients for CGK platform",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./webhooks": {
      "types": "./dist/webhooks/index.d.ts",
      "import": "./dist/webhooks/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/webhooks/index.ts --format esm --dts",
    "dev": "tsup src/index.ts src/webhooks/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cgk/core": "workspace:*",
    "@cgk/db": "workspace:*",
    "@cgk/jobs": "workspace:*",
    "@shopify/shopify-api": "^12.3.0"
  },
  "devDependencies": {
    "@cgk/eslint-config": "workspace:*",
    "@cgk/typescript-config": "workspace:*",
    "eslint": "^9.18.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.0",
    "vitest": "^3.0.0"
  }
}
