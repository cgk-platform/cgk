{
  "name": "@cgk-platform/cli",
  "version": "1.1.0",
  "description": "CLI tool for CGK platform - create, setup, and manage brand sites",
  "license": "MIT",
  "type": "module",
  "bin": {
    "cgk": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cgk-platform/auth": "workspace:*",
    "@cgk-platform/core": "workspace:*",
    "@cgk-platform/db": "workspace:*",
    "@cgk-platform/jobs": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@cgk-platform/eslint-config": "workspace:*",
    "@cgk-platform/typescript-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "eslint": "^9.18.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
