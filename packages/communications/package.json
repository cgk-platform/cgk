{
  "name": "@cgk/communications",
  "version": "0.0.0",
  "description": "Email sender management, DNS configuration, and notification routing for CGK platform",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sender": {
      "types": "./dist/sender/index.d.ts",
      "import": "./dist/sender/index.js"
    },
    "./queue": {
      "types": "./dist/queue/index.d.ts",
      "import": "./dist/queue/index.js"
    },
    "./processors": {
      "types": "./dist/processors/index.d.ts",
      "import": "./dist/processors/index.js"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.js"
    },
    "./inbound": {
      "types": "./dist/inbound/index.d.ts",
      "import": "./dist/inbound/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/sender/index.ts src/queue/index.ts src/processors/index.ts src/templates/index.ts src/inbound/index.ts --format esm --dts",
    "dev": "tsup src/index.ts src/sender/index.ts src/queue/index.ts src/processors/index.ts src/templates/index.ts src/inbound/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cgk/core": "workspace:*",
    "@cgk/db": "workspace:*"
  },
  "devDependencies": {
    "@cgk/eslint-config": "workspace:*",
    "@cgk/typescript-config": "workspace:*",
    "eslint": "^9.18.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.0",
    "vitest": "^3.0.0"
  }
}
