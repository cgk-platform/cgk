{
  "name": "@cgk/jobs",
  "version": "0.0.0",
  "description": "Background job abstraction for CGK platform - supports Trigger.dev, Inngest, or local execution",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./dist/providers/index.js"
    },
    "./events": {
      "types": "./dist/events.d.ts",
      "import": "./dist/events.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "import": "./dist/middleware.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/providers/index.ts src/events.ts src/middleware.ts --format esm --dts",
    "dev": "tsup src/index.ts src/providers/index.ts src/events.ts src/middleware.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cgk/core": "workspace:*",
    "@cgk/db": "workspace:*"
  },
  "peerDependencies": {
    "@trigger.dev/sdk": "^3.0.0 || ^4.0.0",
    "inngest": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@trigger.dev/sdk": {
      "optional": true
    },
    "inngest": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cgk/eslint-config": "workspace:*",
    "@cgk/typescript-config": "workspace:*",
    "@trigger.dev/build": "4.3.3",
    "eslint": "^9.18.0",
    "trigger.dev": "^4.3.3",
    "tsup": "^8.3.0",
    "typescript": "^5.9.0"
  }
}
