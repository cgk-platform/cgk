{
  "name": "@cgk-platform/tax",
  "version": "1.1.2",
  "description": "Tax compliance system for CGK platform - W-9, 1099, TIN encryption",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cgk-platform/core": "workspace:*",
    "@cgk-platform/db": "workspace:*",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@cgk-platform/eslint-config": "workspace:*",
    "@cgk-platform/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "eslint": "^9.18.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.0",
    "vitest": "^3.0.0"
  }
}
