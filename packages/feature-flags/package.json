{
  "name": "@cgk-platform/feature-flags",
  "version": "1.1.0",
  "description": "Feature flag system with 6 flag types, consistent hashing, and multi-layer caching",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react.tsx src/server.ts --format esm --dts --external react",
    "dev": "tsup src/index.ts src/react.tsx src/server.ts --format esm --dts --external react --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cgk-platform/core": "workspace:*",
    "@cgk-platform/db": "workspace:*",
    "@cgk-platform/logging": "workspace:*"
  },
  "devDependencies": {
    "@cgk-platform/eslint-config": "workspace:*",
    "@cgk-platform/typescript-config": "workspace:*",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.18.0",
    "jsdom": "^25.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0 || >=19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
