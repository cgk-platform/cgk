{
  "name": "@cgk-platform/ai-agents",
  "version": "0.0.0",
  "description": "AI Agent system (BRII) for CGK platform - agent configuration, personality, autonomy, action logging, memory system, RAG, multi-channel integrations, and voice capabilities",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cgk-platform/core": "workspace:*",
    "@cgk-platform/db": "workspace:*",
    "openai": "^4.77.0"
  },
  "devDependencies": {
    "@cgk-platform/eslint-config": "workspace:*",
    "@cgk-platform/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "eslint": "^9.18.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.0",
    "vitest": "^3.2.4"
  }
}
