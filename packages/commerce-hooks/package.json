{
  "name": "@cgk-platform/commerce-hooks",
  "version": "1.1.0",
  "description": "React hooks and context providers for commerce operations in CGK platform",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --external react",
    "dev": "tsup src/index.ts --format esm --dts --external react --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cgk-platform/commerce": "workspace:*"
  },
  "devDependencies": {
    "@cgk-platform/eslint-config": "workspace:*",
    "@cgk-platform/typescript-config": "workspace:*",
    "@types/react": "^19.0.0",
    "eslint": "^9.18.0",
    "react": "^19.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0 || >=19.0.0"
  }
}
