{
  "name": "@cgk-platform/admin-core",
  "version": "0.0.0",
  "description": "Core admin functionality: Workflow engine, Smart Inbox, and shared admin utilities",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./workflow": {
      "types": "./dist/workflow/index.d.ts",
      "import": "./dist/workflow/index.js"
    },
    "./inbox": {
      "types": "./dist/inbox/index.d.ts",
      "import": "./dist/inbox/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cgk-platform/core": "workspace:*",
    "@cgk-platform/db": "workspace:*",
    "@cgk-platform/auth": "workspace:*",
    "@cgk-platform/communications": "workspace:*",
    "@cgk-platform/jobs": "workspace:*"
  },
  "devDependencies": {
    "@cgk-platform/eslint-config": "workspace:*",
    "@cgk-platform/typescript-config": "workspace:*",
    "eslint": "^9.18.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.0",
    "vitest": "^3.0.0"
  }
}
