# CGK Platform - pnpm Configuration

# Use strict peer dependencies for consistency
strict-peer-dependencies=false

# Auto-install peers to avoid manual intervention
auto-install-peers=true

# Shamefully hoist for Next.js compatibility (some packages expect flat node_modules)
shamefully-hoist=true

# Public package registry (for @cgk-platform/* packages)
@cgk-platform:registry=https://registry.npmjs.org/

# Use pnpm's default resolution strategy
resolution-mode=highest

# Enable side-effects cache for faster installs
side-effects-cache=true

# Store directory (optional, for monorepo caching)
# store-dir=~/.pnpm-store

# Lockfile format version (pnpm 9+)
lockfile-version=9
