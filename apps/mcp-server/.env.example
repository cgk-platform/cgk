# MCP Server Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# JWT secret for API authentication
# Must match the JWT_SECRET used by other CGK apps
JWT_SECRET=

# Database connection (for API key validation)
DATABASE_URL=

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Server configuration
PORT=3500
NODE_ENV=development

# Logging
LOG_LEVEL=info

# =============================================================================
# OAUTH CONFIGURATION (for Claude Connector integration)
# =============================================================================

# OAuth is configured via database tables:
# - public.oauth_clients: Registered OAuth clients
# - public.oauth_authorization_codes: Temporary auth codes (10 min expiry)
# - public.oauth_refresh_tokens: Long-lived refresh tokens (30 day expiry)
#
# To register a new OAuth client:
# INSERT INTO public.oauth_clients (
#   client_id, name, organization_id, allowed_redirect_uris, is_public, is_active
# ) VALUES (
#   'claude-connector-xxx',
#   'Claude Connector',
#   '<org-uuid>',
#   ARRAY['https://claude.ai/callback'],
#   true,
#   true
# );
#
# For confidential clients, also set client_secret_hash (SHA-256 base64url encoded)
