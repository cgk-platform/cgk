{
  "name": "@cgk-platform-platform/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "CGK - Commerce Growth Kit: Multi-tenant e-commerce platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/cgk-platform/cgk.git"
  },
  "license": "MIT",
  "author": "CGK Platform",
  "type": "module",
  "config": {
    "packageNamespace": "@cgk-platform"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "release": "changeset publish",
    "version-packages": "changeset version",
    "env:pull": "for app in admin storefront orchestrator creator-portal contractor-portal; do (cd apps/$app && vercel env pull .env.local); done"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@types/node": "^22.0.0",
    "prettier": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.8.3",
    "typescript": "^5.9.0",
    "vitest": "^3.0.0"
  },
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
